import math

class Circle:
    # Constructor to initialize the radius
    def __init__(self, radius):
        self.radius = radius
    
    # Method to calculate the area of the circle
    def area(self):
        return math.pi * (self.radius ** 2)
    
    # Method to calculate the perimeter (circumference) of the circle
    def perimeter(self):
        return 2 * math.pi * self.radius

# Example of creating a Circle object and using its methods
circle1 = Circle(5)  # Creating an object with a radius of 5

# Accessing methods of the circle object
print("Area of the circle:", circle1.area())
print("Perimeter of the circle:", circle1.perimeter())